
var-animation-time = 0.35s

.ng-view-slide-left.ng-enter
.ng-view-slide-left.ng-leave
.ng-view-slide-right.ng-enter
.ng-view-slide-right.ng-leave
  transition var-animation-time ease-out all
  position absolute
  width 100%

.ng-view-slide-left.ng-enter
.ng-view-slide-right.ng-leave.ng-leave-active
  transform translate3d(100%, 0, 0)

.ng-view-slide-left.ng-enter.ng-enter-active
.ng-view-slide-left.ng-leave
.ng-view-slide-right.ng-enter.ng-enter-active
.ng-view-slide-right.ng-leave
  transform translate3d(0, 0, 0)

.ng-view-slide-left.ng-leave.ng-leave-active
.ng-view-slide-right.ng-enter
  transform translate3d(-100%, 0, 0)

/* fadeOut - show without animation (instantly there) and slowly fade out */
/* always use in combination with ng-if to add and remove from DOM */
.fadeOut.ng-enter
  transition none

.fadeOut.ng-leave
  transition linear 0.5s

.fadeOut.ng-enter,
.fadeOut.ng-leave.ng-leave-active
  opacity 0

.fadeOut.ng-enter.ng-enter-active,
.fadeOut.ng-leave
  opacity 1